<% select_proof_of_address_page = 'clever_questions.hub.select_proof_of_address'%>
<%= page_title "#{select_proof_of_address_page}.title" %>
<% content_for :feedback_source, 'PROOF_OF_ADDRESS' %>

<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-large"><%= t("#{select_proof_of_address_page}.title") %></h1>
    <p><%= t("#{select_proof_of_address_page}..sub_heading") %></p>
    <div class="panel panel-border-narrow">
      <%= t("#{select_proof_of_address_page}..highlight") %>
    </div>

    <%= form_for @form, :as => 'select_proof_of_address_form', url: select_proof_of_address_path, html: {id: 'validate-proof-of-address', 'data-msg': t('errors.no_selection')} do |f| %>

        <%= render 'shared/form-errors', errors: flash[:errors] %>

        <h2 class="heading-medium"><%= t("#{select_proof_of_address_page}.financial_details.heading") %></h2>

        <%= content_tag :div, id: 'bank_account_question',class: form_question_class do %>
            <fieldset class="inline">
              <legend><span class="form-label"><strong><%= t("#{select_proof_of_address_page}..financial_details.question.bank_account") %></strong></span></legend>
              <%= f.custom_radio_button :uk_bank_account_details, true, t('option.yes'), { piwik_event_tracking: 'evidence_uk_bank_account'}  %>
              <%= f.custom_radio_button :uk_bank_account_details, false, t('option.no'), { piwik_event_tracking: 'evidence_uk_bank_account'} %>
            </fieldset>
        <% end %>
        <%= content_tag :div, id: 'debit_card_question',class: form_question_class do %>
            <fieldset class="inline">
              <legend><span class="form-label"><strong><%= t("#{select_proof_of_address_page}.financial_details.question.debit_card") %></strong></span></legend>
              <%= f.custom_radio_button :debit_card, true, t('option.yes'), { piwik_event_tracking: 'evidence_debit_card'}  %>
              <%= f.custom_radio_button :debit_card, false, t('option.no'), { piwik_event_tracking: 'evidence_debit_card'} %>
            </fieldset>
        <% end %>
        <%= content_tag :div, id: 'credit_card_question',class: form_question_class do %>
            <fieldset class="inline">
              <legend><span class="form-label"><strong><%= t("#{select_proof_of_address_page}.financial_details.question.credit_card") %></strong></span></legend>
              <%= f.custom_radio_button :credit_card, true, t('option.yes'), { piwik_event_tracking: 'evidence_credit_card'}  %>
              <%= f.custom_radio_button :credit_card, false, t('option.no'), { piwik_event_tracking: 'evidence_credit_card'}  %>
            </fieldset>
        <% end %>

        <div id="validation-error-message-js"></div>

        <div class="actions">
          <%= f.submit t('navigation.continue'), class: 'button', id: 'next-button' %>
        </div>

    <% end %>
  </div>
</div>
