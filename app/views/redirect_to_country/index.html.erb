<%= page_title 'hub.redirect_to_country.title' %>

<div class="content">
  <div class="grid-row">
    <div class="column-two-thirds"><h1 class="heading-xlarge"><%= t('hub.redirect_to_country.heading')%></h1>
      <div class="application-notice info-notice">
        <p><%= t('hub.redirect_to_country.description')%></p>
      </div>
      <%= form_tag(@country_request.location, class: 'js-auto-submit', authenticity_token: true, enforce_utf8: false) do %>
        <%= hidden_field_tag 'SAMLRequest', @country_request.saml_request %>
        <%= hidden_field_tag 'RelayState', @country_request.relay_state %>
        <%= hidden_field_tag 'registration', @country_request.registration %>
        <%= submit_tag 'Continue', id: 'continue-button', class: 'button' %>
      <% end %>
    </div>
  </div>
</div>
