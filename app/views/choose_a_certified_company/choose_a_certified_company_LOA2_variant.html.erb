<%= page_title 'hub.choose_a_certified_company.ab_test_title' %>
<% content_for :feedback_source, 'CHOOSE_A_CERTIFIED_COMPANY_PAGE' %>
<% content_for :additional_javascript do %>
    <%= javascript_include_tag 'piwik_idp_picker_tracking' %>
<% end %>

<div class="content-inner">
  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large"><%= t 'hub.choose_a_certified_company.ab_test_title' %></h1>
        <% if @any_docs %>
        <p><%= t 'hub.choose_a_certified_company.ab_test_intro' %></p>
          <ul class="list-bullet list">
            <% if @driving_licence %> <li><%= t 'hub.choose_a_certified_company.ab_test_driving_licence' %></li> <% end %>
            <% if @non_uk_id_document %> <li><%= t 'hub.choose_a_certified_company.ab_test_non_uk_id_document' %></li> <% end %>
            <% if @smart_phone %> <li><%= t 'hub.choose_a_certified_company.ab_test_smart_phone' %></li> <% end %>
            <% if @passport %> <li><%= t 'hub.choose_a_certified_company.ab_test_passport' %></li> <% end %>
          </ul>
        <% end %>

      <details>
        <summary>
          <span class="summary"><%= t 'hub.choose_a_certified_company.ab_test_summary' %></span>
        </summary>
        <div class="panel panel-border-narrow">
          <%= t 'hub.choose_a_certified_company.ab_test_details_html', service_you_are_accessing: @transaction.other_ways_description %>
        </div>
      </details>
      <p class="medium-top"><%= t 'hub.choose_a_certified_company.ab_test_free' %></p>
    </div>
  </div>
  <div id="matching-idps">
    <% @recommended_idps.each do |identity_provider| %>
      <%= render partial: 'choose_a_certified_company/idp_option', locals: {recommended: true, identity_provider: identity_provider} %>
    <% end %>
  </div>
  <% if @non_recommended_idps.any? %>
    <div id="non-matching-idps">
      <div class="grid-row">
        <div class="column-two-thirds">
          <p class="medium-top">
            <%= t 'hub.choose_a_certified_company.filtered_idps_message_html',
                  company_count: t('hub.choose_a_certified_company.company_html', count: @non_recommended_idps.length) %>
          </p>
        </div>
      </div>
      <details>
        <summary>
          <span class="summary"><%= t 'hub.choose_a_certified_company.show_all_companies' %></span>
        </summary>
        <div class="panel panel-border-narrow">
          <% @non_recommended_idps.each do |identity_provider| %>
            <%= render partial: 'choose_a_certified_company/idp_option', locals: {recommended: false, identity_provider: identity_provider} %>
          <% end %>
        </div>
      </details>
    </div>
  <% end %>
</div>
