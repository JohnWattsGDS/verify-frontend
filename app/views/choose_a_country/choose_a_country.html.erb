<%= page_title 'hub.choose_country.title' %>

<div class="article-container column-two-thirds">
  <h1 class="heading-large"><%= t('hub.choose_country.heading') %></h1>

  <%= form_tag choose_a_country_submit_path do %>
      <select name="country" id="country-picker" class="form-control-2-3 form-control">
        <option value=""></option>
        <% @countries.each do |country| %>
        <option value="<%= country.simple_id %>"><%= country.display_name %></option>
        <% end %>
      </select>
      <%= submit_tag "Select", class: "button"%>
  <% end %>
  <div id="no-country" style="display: <%= flash[:errors] ? 'block' : 'none' %>;">
    <h2 class="heading-medium">Please select a country from the list</h2>
    <p><a href="javascript:history.back()">Try another way to sign in.</a></p>
  </div>
</div>
