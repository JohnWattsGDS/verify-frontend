<%= image_tag('', style: 'left: -9999px; position: absolute; border:0', height: '1', width: '1', id: 'fp_img') %>
<%= javascript_tag do %>
    // ensure that the epoch is increased whenever the fingerprint algorithm is changed in any way - this will ensure that we compare like with like
    var fingerprintEpoch = 4;
    reportFingerprint('<%= fingerprint_path %>', fingerprintEpoch, document.getElementById('fp_img'));
<% end %>

<noscript style="position: absolute;">
