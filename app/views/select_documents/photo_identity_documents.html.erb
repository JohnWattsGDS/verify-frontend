<%= page_title 'hub.select_documents.title_photo_documents' %>
<% content_for :feedback_source, 'SELECT_DOCUMENTS_PAGE_PHOTO_DOCUMENTS' %>

<div id="no-documents-message" class="visually-hidden" aria-live="assertive" data-no-documents-message="<%= h t('hub.select_documents.no_documents_message') %>"></div>

<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-large"><%= t 'hub.select_documents.title_photo_documents' %></h1>
    <p><%= t 'hub.select_documents.sub_heading' %></p>
    <% if flash[:errors] %>
        <div id="validation-error-message-no-js" class="validation-message form-group">
          <p class="error"><%= flash[:errors] %></p>
        </div>
    <% end %>
    <div class="panel panel-border-narrow">
      <%= t 'hub.select_documents.highlight' %>
    </div>
    <%= form_for @form, url: select_documents_submit_path, html: {id: 'validate-photo-documents', class: 'select-documents-form', novalidate: 'novalidate', 'data-msg': t('hub.select_documents.errors.no_selection')} do |f| %>
        <%= content_tag :div, class: flash[:errors] ? "form-group error" : "form-group" do %>
            <h2 class="heading-medium"><%= t 'hub.select_documents.valid_UK_driving_licence' %></h2>
            <div class="form-group form-field">
              <fieldset>
                <%= f.custom_radio_button :any_driving_licence, true, t('hub.select_documents.documents_option_yes') %>
                <%= f.custom_radio_button :any_driving_licence, false, t('option.no') %>
              </fieldset>
            </div>
            <%= content_tag :div, id: 'driving_licence_details', class: hidden_form_question_class do %>
                <fieldset>
                  <legend><span class="form-label"><%= t 'hub.select_documents.where_driving_licence_issued' %></span></legend>
                  <label class="block-label selection-button-checkbox" for="driving_licence">
                    <%= f.check_box :driving_licence %><%= t('hub.select_documents.driving_licence_details.great_britain') %>
                  </label>
                  <label class="block-label selection-button-checkbox" for="ni_driving_licence">
                    <%= f.check_box :ni_driving_licence %><%= t('hub.select_documents.driving_licence_details.northern_ireland') %>
                  </label>

                </fieldset>
            <% end %>

            <h2 class="heading-medium"><%= t 'hub.select_documents.uk_passport' %></h2>
            <div class="form-group form-field">
              <fieldset>
                <%= f.custom_radio_button :passport, true, t('hub.select_documents.documents_option_yes') %>
                <%= f.custom_radio_button :passport, false, t('option.no') %>
              </fieldset>
            </div>

        <% end %>

        <div id="validation-error-message-js"></div>

        <div class="actions">
          <%= f.submit t('navigation.continue'), class: 'button', id: 'next-button' %>
          <%= link_to t('hub.select_documents.neither_documents'), other_identity_documents_path %>
        </div>
    <% end %>

  </div>
</div>
